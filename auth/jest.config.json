{
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.ts",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!./src/index.ts"
  ],
  "coverageReporters": ["text", "json", "lcov"],
  "verbose": true
}
